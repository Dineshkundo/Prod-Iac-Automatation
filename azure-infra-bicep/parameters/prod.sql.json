{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serviceName": { "value": "sql" },
    "tagSuffix": { "value": "prod" },
    "location": { "value": "eastus" },
    "sqlConfig": { "value": {
      "serverName": "prod-sqlserver01",
      "location": "eastus",
      "vulnerabilityAssessmentsStoragePath": { "value": "https://mystorage.blob.core.windows.net/sqlva" },
      "adminLogin": "sqladminuser",
      "tags": {
        "Owner": "FinOps",
        "Environment": "Production"
      },
      "firewallRules": [
        {
          "name": "AllowAllAzureIPs",
          "startIpAddress": "0.0.0.0",
          "endIpAddress": "0.0.0.0"
        }
      ],
      "databaseName": "finance_db",
      "databaseSku": {
        "name": "S0",
        "tier": "Standard",
        "capacity": 10
      },
      "databaseProperties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "zoneRedundant": false,
        "readScale": "Disabled"
      },
      "databaseVulnerabilityRecurringScans": {
        "isEnabled": true,
        "emailSubscriptionAdmins": true,
        "emails": [
          "finops-secure@example.com"
        ]
      }
    }},
    "keyVaultName": { "value": "" },
    "secretNames": { "value": {} }
  }
}
